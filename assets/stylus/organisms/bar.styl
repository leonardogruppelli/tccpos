.bar
  width 100%
  height 70px
  padding 0 20px

  &__list
    width 100%
    height 100%
    display flex
    flex-direction row
    justify-content space-between

  &__item
    display flex
    flex-direction row
    align-items center

    &--search
      flex 1
      justify-content flex-end
      display none
      +above(l)
        display flex

    svg
      width 50px
      +above(l)
        width 60px
