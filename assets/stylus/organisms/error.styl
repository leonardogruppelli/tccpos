.error
  max-width 768px

  &__title
    font-size rem(50)
    +above(m)
      font-size rem(70)

  &__text
    margin rem(0 0 40 7)
    color $terciary
    +above(m)
      font-size rem(22)
  
  &__link
    position relative
    padding rem(7)
    @extend .montserrat
    font-size rem(12)
    font-weight 400
    color $primary
    text-transform uppercase

    &--not-found
      padding-left rem(50)

    &--offline
      padding-left rem(40)

    &:hover

      & ^[1]__icon--not-found
        transform translateY(-50%) translateX(-15px)
      
      & ^[1]__icon--offline
        transform translateY(-50%) rotate(360deg)

    &__icon
      position absolute
      top 50%
      left rem(10)
      transform translateY(-50%)
      transition transform 0.3s ease-out

      &:before
      &:after
        content ''
        position absolute

      &--not-found

        &:before
        &:after
          top 50%
          background-color transparent

        &:before
          width 10px
          height 10px
          left 0
          border solid $primary
          border-width 1px 0 0 1px
          transform translateY(-50%) rotate(-45deg)

        &:after
          width 25px
          height 1px
          left -1px
          background-color $primary
          transform translateY(-50%)

      &--offline
        width 20px
        height 20px
        background-color transparent
        box-shadow inset 0 0 0 1px $primary
        border-radius 50%

        &:before
        &:after
          left 50%

        &:before
          width calc(100% + 1px)
          height calc(100% + 1px)
          top 50%
          border 2px solid transparent
          border-right-color $quaternary
          border-radius 50%
          transform translate(-50%, -50%) rotate(-45deg)

        &:after
          top 0
          border 3px solid transparent
          border-left-color $primary
          transform translateY(-40%)