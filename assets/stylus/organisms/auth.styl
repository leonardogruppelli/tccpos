.auth
  width 100%
  height 100%
  max-width 768px
  display flex
  flex-direction column
  +above(l)
    height auto
    flex-direction row
    padding rem(20)

  &__logo
    display flex
    align-items center
    justify-content center
    flex 1
    padding rem(25)
    background-color $black

    svg 
      width 100px
      +above(l)
        width 60%

  &__form
    flex 3
    padding 10%
    background-color $white
    +above(l)
      flex 2

  &__title
    margin-bottom rem(20)

  &__error
    display block
    margin rem(10 0)
    font-size rem(12)
    color $error