.sidebar
  width 260px
  height 100vh
  background-color $black
  position fixed
  top 0
  left 0
  z-index 2
  +above(l)
    width 300px

  &__item
    display flex
    align-items center
    padding 10px
    font-size rem(14)
    font-weight 400
    color $secondary
    text-transform uppercase
    transition background-color 0.2s ease-in, color 0.1s ease

    &--separator
      margin-top 10px

    &--top
      flex-direction row
      justify-content space-between
      
    &:hover
      color $primary

    &__icon
      flex 0 0 30px
      font-size rem(24)
      margin-right 15px

    &__text
      flex 1

    &.active
      background-color #fff
      color $primary

      h5
        display inline-block
        margin-left 15px
        @extend .montserrat
        font-weight 100
        color $terciary