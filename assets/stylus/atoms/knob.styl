.knob
  display inline-flex
  align-items center
  justify-content center
  position relative
  margin-top rem(40)
  border-radius 4px
  @extend .montserrat
  font-size rem(12)
  font-weight 700
  color $white
  text-transform uppercase
  cursor pointer
  overflow hidden

  &--rounded
    width 60px
    height 60px
    border-radius 50%

  ~/--rounded &

    &__icon
      font-size rem(24)

  &--flat
    width 40px
    height 40px

  ~/--flat &

    &__icon
      font-size rem(20)

  &:not(&--rounded)
    padding rem(10 15)

  ~/:not(&--rounded) &
    
    &__icon
      margin-right rem(10)

  &--no-margin
    margin-top 0

  &__spinner
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    background-color inherit
    position absolute
    top 0
    left 0
    visibility hidden

    svg
      margin-right 0

  &--full
    width 100%

  &--center
    margin-left auto
    margin-right auto

  &--right
    float right

  ~/--loading &

    &__spinner
      visibility visible