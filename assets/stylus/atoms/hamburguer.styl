.hamburguer
  width 30px
  height 30px
  position relative
  margin 0 20px
  cursor pointer
  +above(l)
    width 40px
    height 40px

  &__line
    width 80%
    height 1px
    background-color $primary
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

    &:first-of-type
      top calc(50% - 8px)

    &:nth-of-type(2)
      margin-left 5px

    &:last-of-type
      top calc(50% + 8px)