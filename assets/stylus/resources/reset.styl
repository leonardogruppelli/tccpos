*
*:before
*:after
  padding 0
  margin 0
  vertical-align middle
  background inherit
  border 0
  outline 0
  font inherit
  color inherit
  box-sizing border-box

article
aside
details
figcaption
figure
footer
header
hgroup
menu
nav
section 
  display block

html
body
#__nuxt
#__layout
  width 100%
  height 100%
  overflow hidden

body
  @extend .roboto
  font-size rem(16)
  font-weight 300

.content
  width 100%
  height 100%
  display flex
  flex-direction column

.main
  flex 1
  padding rem(20)
  background-color $quaternary

  &--center
    display flex
    flex-direction column
    align-items center
    justify-content center
    padding 0

a
button
  user-select none

a
  text-decoration none

ul
ol
  list-style none

hr
  margin rem(5 10)
  border-style inset
  border-top-width 1px
  border-color $white

table 
  border-collapse collapse
  border-spacing 0